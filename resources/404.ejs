        .error-graphic {
            animation: float 4s ease-in-out infinite;
        }
        
        /* Reduced motion preference */
        @media (prefers-reduced-motion) {
            .btn, .error-graphic, .error-container::before, 
            .stars::before, .stars::after, .shooting-star {
                animation: none;
                transition: none;
            }
        }
        
        /* Glow effect for CryptalisDash feel */
        .glow {
            position: absolute;
            width: 100px;
