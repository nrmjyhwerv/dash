<%- include('./components/wrapper') %>

<main class="flex-1 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
  <!-- Animated Background Elements -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-0 w-64 h-64 bg-blue-500/5 rounded-full filter blur-3xl animate-float1"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple-500/5 rounded-full filter blur-3xl animate-float2"></div>
    <div class="absolute top-1/3 right-1/4 w-80 h-80 bg-teal-500/5 rounded-full filter blur-3xl animate-float3"></div>
  </div>

  <div class="relative z-10 py-8 animate-fadeIn">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header with Animated Title -->
      <div class="mb-10 text-center">
        <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 animate-gradient bg-300%">
          Admin Control Panel
        </h1>
        <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-400 animate-fadeIn delay-300">
          Manage users, resources, and system settings
        </p>
      </div>

      <!-- Notification System -->
      <div class="notifications-container space-y-4 mb-8">
        <% if (req.query.success == "COMPLETE") { %>
        <div class="notification-success bg-gradient-to-r from-green-900/80 to-green-800/80 border-l-4 border-green-400 rounded-xl shadow-lg p-4 animate-slideInRight">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-100">Action Completed</h3>
              <p class="text-sm text-green-200">The changes to the user have been made.</p>
            </div>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex h-8 w-8 bg-green-900/20 text-green-400 hover:bg-green-800/30 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </button>
          </div>
        </div>
        <% } %>
        
        <!-- Other notification templates... -->
      </div>

      <!-- Main Dashboard Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- User Management Card -->
