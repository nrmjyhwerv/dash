<%- include('./components/wrapper') %>
  <%- include('./components/header') %>

<style>
  :root {
    --bg-primary: #1a1a2e;
    --bg-secondary: #16213e;
    --bg-card: #0f3460;
    --accent-primary: #4cc9f0;
    --accent-secondary: #4361ee;
    --text-primary: #e6e6e6;
    --text-secondary: #b8b8b8;
    --success: #4ade80;
    --warning: #f59e0b;
    --danger: #ef4444;
    --border-radius: 12px;
    --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .referral-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
    font-family: 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
    color: var(--text-primary);
  }

  .referral-section {
    margin-bottom: 30px;
    background: var(--bg-card);
    padding: 25px;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .referral-section:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
  }

  .referral-title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 25px;
    color: var(--accent-primary);
    position: relative;
    padding-bottom: 10px;
  }

  .referral-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--accent-secondary);
    border-radius: 3px;
  }

  .referral-subtitle {
    font-weight: 600;
    margin: 20px 0 15px;
    color: var(--accent-primary);
    font-size: 20px;
  }

  .referral-link-box {
    display: flex;
    margin-bottom: 20px;
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .referral-link {
    flex-grow: 1;
    padding: 12px 15px;
    border: 2px solid var(--bg-secondary);
    background: var(--bg-secondary);
    color: var(--text-primary);
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .referral-link:focus {
    outline: none;
    border-color: var(--accent-primary);
  }

  .copy-btn {
    padding: 12px 20px;
    background: var(--accent-secondary);
    color: white;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .copy-btn:hover {
    background: var(--accent-primary);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 20px 0;
  }

  .stat-item {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: var(--border-radius);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .stat-item:hover {
    transform: scale(1.03);
  }

  .stat-value {
    font-weight: 700;
    font-size: 24px;
    color: var(--accent-primary);
    margin: 10px 0;
  }

  .input-group {
    display: flex;
    margin: 20px 0;
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .code-input {
    flex-grow: 1;
    padding: 12px 15px;
    border: 2px solid var(--bg-secondary);
    background: var(--bg-secondary);
    color: var(--text-primary);
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  .code-input:focus {
    outline: none;
    border-color: var(--accent-primary);
  }

  .apply-btn, .create-btn {
    padding: 12px 20px;
    background: var(--accent-secondary);
    color: white;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .apply-btn:hover, .create-btn:hover {
    background: var(--accent-primary);
  }

  .codes-table, .users-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin: 20px 0;
    overflow: hidden;
    border-radius: var(--border-radius);
  }

  .codes-table th, .users-table th {
    text-align: left;
    padding: 15px;
    background: var(--bg-secondary);
    font-weight: 600;
  }

  .codes-table td, .users-table td {
    padding: 12px 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .codes-table tr:last-child td, .users-table tr:last-child td {
    border-bottom: none;
  }

  .codes-table tr:hover, .users-table tr:hover {
    background: rgba(255, 255, 255, 0.03);
  }

  .action-btn {
    padding: 8px 15px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .delete-btn {
    background: var(--danger);
    color: white;
  }

  .delete-btn:hover {
    background: #dc2626;
  }

  .claim-btn {
    display: block;
    width: 100%;
    padding: 15px;
    background: var(--success);
    color: white;
    border: none;
    border-radius: var(--border-radius);
    font-weight: 700;
    font-size: 18px;
    cursor: pointer;
    margin-top: 30px;
    transition: all 0.3s ease;
    box-shadow: var(--box-shadow);
  }

  .claim-btn:hover {
    background: #22c55e;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
  }

  .claim-btn:disabled {
    background: #6b7280;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .example-text {
    color: var(--text-secondary);
    font-size: 14px;
    margin-top: 10px;
    font-style: italic;
  }

  .success-message {
    background: rgba(74, 222, 128, 0.2);
    color: var(--success);
    padding: 15px;
    border-radius: var(--border-radius);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .success-message::before {
    content: 'âœ“';
    font-weight: bold;
  }

  .empty-state {
    text-align: center;
    padding: 30px;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .referral-container {
      padding: 15px;
    }

    .referral-section {
      padding: 20px;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .input-group, .referral-link-box {
      flex-direction: column;
    }

    .code-input, .referral-link {
      border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
    }

    .apply-btn, .copy-btn, .create-btn {
      border-radius: 0 0 var(--border-radius) var(--border-radius) !important;
      width: 100%;
    }
  }
</style>

<div class="referral-container">
  <div class="referral-section">
    <h1 class="referral-title">Referral Program</h1>

    <% if (req.query.success) { %>
      <div class="success-message">
        <%= req.query.success === "claimed" ? "Rewards claimed successfully!" : 
           req.query.success === "code_applied" ? "Referral code applied successfully!" : 
           req.query.success === "code_created" ? "Custom referral code created!" : "" %>
      </div>
    <% } %>

    <h2 class="referral-subtitle">Your Referral Link</h2>
    <div class="referral-link-box">
      <input type="text" class="referral-link" id="referralLink" value="<%= referralLink %>" readonly>
      <button class="copy-btn" onclick="copyReferralLink()">Copy Link</button>
    </div>
    <p>Share your link and earn <strong><%= referralBonus %> coins</strong> for each friend who signs up or applies your code!</p>
  </div>

  <div class="referral-section">
    <h2 class="referral-subtitle">Your Referral Stats</h2>
    <div class="stats-grid">
      <div class="stat-item">
        <div>Total Referrals</div>
        <div class="stat-value"><%= referredUsers.length %></div>
        <div>friends joined</div>
      </div>
      <div class="stat-item">
        <div>Total Earned</div>
        <div class="stat-value"><%= referredUsers.length * referralBonus %></div>
        <div>coins collected</div>
      </div>
      <div class="stat-item">
        <div>Pending Rewards</div>
        <div class="stat-value"><%= (referredUsers.length * referralBonus) - referralRewards %></div>
        <div>coins available</div>
      </div>
    </div>
  </div>

  <div class="referral-section">
    <h2 class="referral-subtitle">Apply a Referral Code</h2>
    <p>Support a friend by entering their referral code below (one-time use only)</p>
    <div class="input-group">
      <input type="text" class="code-input" id="applyCodeInput" placeholder="Enter referral code">
      <button class="apply-btn" onclick="applyReferralCode()">Apply Code</button>
    </div>
  </div>

  <div class="referral-section">
    <h2 class="referral-subtitle">Your Custom Referral Codes</h2>
    <p>Create personalized codes to track your referrals (<%= referralCodes.length %>/<%= maxCodes %> slots used)</p>

    <% if (referralCodes.length > 0) { %>
      <div style="overflow-x: auto;">
        <table class="codes-table">
          <thead>
            <tr>
              <th>Code</th>
              <th>Created</th>
              <th>Uses</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% referralCodes.forEach(refCode => { %>
              <tr>
                <td><code><%= refCode.code %></code></td>
                <td><%= new Date(refCode.createdAt).toLocaleDateString() %></td>
                <td><%= refCode.uses %></td>
                <td>
                  <button class="action-btn delete-btn" onclick="deleteReferralCode('<%= refCode.code %>')">Delete</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        You haven't created any custom referral codes yet
      </div>
    <% } %>

    <% if (referralCodes.length < maxCodes) { %>
      <div class="input-group">
        <input type="text" class="code-input" id="customCodeInput" placeholder="Create custom code (4-20 characters)">
        <button class="create-btn" onclick="createReferralCode()">Create Code</button>
      </div>
      <p class="example-text">Examples: yourname_code, gaming123, premium-access</p>
    <% } else { %>
      <div class="empty-state">
        You've reached your maximum number of custom codes (<%= maxCodes %>)
      </div>
    <% } %>
  </div>

  <% if (referredUsers.length > 0) { %>
    <div class="referral-section">
      <h2 class="referral-subtitle">Your Referred Friends</h2>
      <div style="overflow-x: auto;">
        <table class="users-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Email</th>
              <th>Reward</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% referredUsers.forEach((user, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user %></td>
                <td><%= referralBonus %> coins</td>
                <td>Completed</td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>

  <button class="claim-btn" id="claimRewardsBtn" <%= (referredUsers.length * referralBonus) - referralRewards <= 0 ? 'disabled' : '' %>>
    Claim <%= (referredUsers.length * referralBonus) - referralRewards %> Pending Coins
  </button>
</div>

    <script>
      function copyReferralLink() {
          const copyText = document.getElementById("referralLink");
          copyText.select();
          copyText.setSelectionRange(0, 99999);
          document.execCommand("copy");

          const button = event.target;
          const originalText = button.innerHTML;
          button.innerHTML = '<i class="fas fa-check"></i> Copied!';
          setTimeout(() => {
              button.innerHTML = originalText;
          }, 2000);
      }

      async function applyReferralCode() {
          const code = document.getElementById('applyCodeInput').value.trim();
          if (!code) {
              alert('Please enter a referral code');
              return;
          }

          try {
              const response = await fetch('/apply-referral-code', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  },
                  body: JSON.stringify({ code })
              });

              const data = await response.json();

              if (data.error) {
                  alert(data.error);
              } else {
                  window.location.href = '/referrals?success=code_applied';
              }
          } catch (error) {
              console.error('Error:', error);
              alert('An error occurred while applying the code');
          }
      }

      async function createReferralCode() {
          const code = document.getElementById('customCodeInput').value.trim();
          if (!code || code.length < 4 || code.length > 20) {
              alert('Code must be 4-20 characters long');
              return;
          }

          try {
              const response = await fetch('/create-referral-code', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  },
                  body: JSON.stringify({ customCode: code })
              });

              const data = await response.json();

              if (data.error) {
                  alert(data.error);
              } else {
                  window.location.href = '/referrals?success=code_created';
              }
          } catch (error) {
              console.error('Error:', error);
              alert('An error occurred while creating the code');
          }
      }

      async function deleteReferralCode(code) {
          if (!confirm('Are you sure you want to delete this referral code?')) {
              return;
          }

          try {
              const response = await fetch('/delete-referral-code', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  },
                  body: JSON.stringify({ code })
              });

              const data = await response.json();

              if (data.error) {
                  alert(data.error);
              } else {
                  window.location.reload();
              }
          } catch (error) {
              console.error('Error:', error);
              alert('An error occurred while deleting the code');
          }
      }

      // AJAX for claiming rewards
      document.getElementById('claimRewardsBtn').addEventListener('click', async () => {
          try {
              const response = await fetch('/claim-referral', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  }
              });

              const data = await response.json();

              if (data.error) {
                  alert(data.error);
              } else {
                  window.location.href = '/referrals?success=claimed';
              }
          } catch (error) {
              console.error('Error:', error);
              alert('An error occurred while claiming rewards');
          }
      });
    </script>
    <%- include('./components/footer') %>