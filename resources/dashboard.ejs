<%- include('./components/wrapper') %>
  <%- include('./components/header') %>

<main class="flex-1 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
  <div class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Notification System -->
      <div class="notifications-container space-y-4 mb-8">
        <% if (req.query.err=="INTERNALERROR" ) { %>
        <div class="bg-gradient-to-r from-red-900/80 to-red-800/80 border-l-4 border-red-400 rounded-lg text-red-100 px-4 py-3 flex items-start shadow-lg transform transition-all duration-300 hover:scale-[1.01] animate-fade-in">
          <div class="flex-shrink-0 pt-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="font-bold text-white">Internal Server Error</p>
            <p class="text-sm mt-1 text-red-100">Cryptalis couldn't process the action due to an internal issue.</p>
          </div>
          <button onclick="this.parentNode.remove()" class="ml-4 -mr-2 p-1 rounded-full hover:bg-red-700/30 focus:outline-none transition-colors">
            <svg class="h-5 w-5 text-red-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <% } %>

        <% if (req.query.err=="DONOTOWN" ) { %>
        <div class="bg-gradient-to-r from-red-900/80 to-red-800/80 border-l-4 border-red-400 rounded-lg text-red-100 px-4 py-3 flex items-start shadow-lg transform transition-all duration-300 hover:scale-[1.01] animate-fade-in">
          <div class="flex-shrink-0 pt-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="font-bold text-white">Unauthorized Action</p>
            <p class="text-sm mt-1 text-red-100">You don't have permission to modify this server.</p>
          </div>
          <button onclick="this.parentNode.remove()" class="ml-4 -mr-2 p-1 rounded-full hover:bg-red-700/30 focus:outline-none transition-colors">
            <svg class="h-5 w-5 text-red-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <% } %>

        <% if (req.query.err=="NOTFOUND" ) { %>
        <div class="bg-gradient-to-r from-red-900/80 to-red-800/80 border-l-4 border-red-400 rounded-lg text-red-100 px-4 py-3 flex items-start shadow-lg transform transition-all duration-300 hover:scale-[1.01] animate-fade-in">
          <div class="flex-shrink-0 pt-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="font-bold text-white">Resource Not Found</p>
            <p class="text-sm mt-1 text-red-100">The requested server could not be located.</p>
          </div>
          <button onclick="this.parentNode.remove()" class="ml-4 -mr-2 p-1 rounded-full hover:bg-red-700/30 focus:outline-none transition-colors">
            <svg class="h-5 w-5 text-red-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <% } %>

        <% if (req.query.success=="DELETE" ) { %>
        <div class="bg-gradient-to-r from-green-900/80 to-green-800/80 border-l-4 border-green-400 rounded-lg text-green-100 px-4 py-3 flex items-start shadow-lg transform transition-all duration-300 hover:scale-[1.01] animate-fade-in">
          <div class="flex-shrink-0 pt-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="font-bold text-white">Server Deleted</p>
            <p class="text-sm mt-1 text-green-100">The server has been successfully removed.</p>
          </div>
          <button onclick="this.parentNode.remove()" class="ml-4 -mr-2 p-1 rounded-full hover:bg-green-700/30 focus:outline-none transition-colors">
            <svg class="h-5 w-5 text-green-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <% } %>

        <% if (req.query.success=="CREATED" ) { %>
        <div class="bg-gradient-to-r from-green-900/80 to-green-800/80 border-l-4 border-green-400 rounded-lg text-green-100 px-4 py-3 flex items-start shadow-lg transform transition-all duration-300 hover:scale-[1.01] animate-fade-in">
          <div class="flex-shrink-0 pt-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="font-bold text-white">Server Created</p>
            <p class="text-sm mt-1 text-green-100">Your new server is being provisioned. You'll receive an email when ready.</p>
          </div>
          <button onclick="this.parentNode.remove()" class="ml-4 -mr-2 p-1 rounded-full hover:bg-green-700/30 focus:outline-none transition-colors">
            <svg class="h-5 w-5 text-green-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <% } %>
      </div>

      <!-- Header Section -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
          <h1 class="text-3xl font-bold text-white">Dashboard</h1>
          <p class="text-gray-400 mt-2">Manage your game servers and resources</p>
        </div>

        <!-- Quick Actions Bar -->
        <div class="mt-4 md:mt-0 flex flex-wrap gap-3">
          <a href="../create-server" class="flex items-center px-4 py-2.5 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 rounded-lg text-white font-medium shadow-lg transition-all hover:shadow-xl hover:translate-y-[-2px] transform active:scale-95">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            New Server
          </a>
          <a href="../store" class="flex items-center px-4 py-2.5 bg-gradient-to-r from-purple-600 to-purple-500 hover:from-purple-500 hover:to-purple-400 rounded-lg text-white font-medium shadow-lg transition-all hover:shadow-xl hover:translate-y-[-2px] transform active:scale-95">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
              <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd" />
            </svg>
            Upgrade Resources
          </a>
          <a href="./help" class="flex items-center px-4 py-2.5 bg-gradient-to-r from-gray-700 to-gray-600 hover:from-gray-600 hover:to-gray-500 rounded-lg text-white font-medium shadow-lg transition-all hover:shadow-xl hover:translate-y-[-2px] transform active:scale-95">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
            Support
          </a>
        </div>
      </div>

      <!-- Resource Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- CPU Card -->
        <div class="bg-gray-800/80 rounded-xl shadow-xl overflow-hidden border border-gray-700/60 hover:border-blue-500/50 transition-all duration-300 hover:shadow-2xl backdrop-blur-sm">
          <div class="p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-lg bg-gradient-to-br from-blue-600/30 to-blue-800/30 border border-blue-500/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-white">CPU Cores</h3>
                <p class="text-sm text-gray-400">Processing Power</p>
              </div>
            </div>
            <div class="mt-6">
              <div class="flex justify-between text-sm text-gray-400 mb-2">
                <span>Used: <%= existing.cpu %>%</span>
                <span>Available: <%= max.cpu %>%</span>
              </div>
              <div class="w-full bg-gray-700/70 rounded-full h-2.5">
                <div class="bg-gradient-to-r from-blue-500 to-blue-400 h-2.5 rounded-full" style="width: <%= (existing.cpu / max.cpu) * 100 %>%"></div>
              </div>
              <div class="mt-4">
                <a href="../store" class="text-blue-400 hover:text-blue-300 text-sm font-medium inline-flex items-center group">
                  Upgrade CPU
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- RAM Card -->
        <div class="bg-gray-800/80 rounded-xl shadow-xl overflow-hidden border border-gray-700/60 hover:border-purple-500/50 transition-all duration-300 hover:shadow-2xl backdrop-blur-sm">
          <div class="p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-lg bg-gradient-to-br from-purple-600/30 to-purple-800/30 border border-purple-500/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v14a1 1 0 01-1 1H5a1 1 0 01-1-1V5z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9h6v6H9V9z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-white">Memory</h3>
                <p class="text-sm text-gray-400">System RAM</p>
              </div>
            </div>
            <div class="mt-6">
              <div class="flex justify-between text-sm text-gray-400 mb-2">
                <span>Used: <%= existing.ram %>MB</span>
                <span>Available: <%= max.ram %>MB</span>
              </div>
              <div class="w-full bg-gray-700/70 rounded-full h-2.5">
                <div class="bg-gradient-to-r from-purple-500 to-purple-400 h-2.5 rounded-full" style="width: <%= (existing.ram / max.ram) * 100 %>%"></div>
              </div>
              <div class="mt-4">
                <a href="../store" class="text-purple-400 hover:text-purple-300 text-sm font-medium inline-flex items-center group">
                  Upgrade RAM
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Disk Card -->
        <div class="bg-gray-800/80 rounded-xl shadow-xl overflow-hidden border border-gray-700/60 hover:border-green-500/50 transition-all duration-300 hover:shadow-2xl backdrop-blur-sm">
          <div class="p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-lg bg-gradient-to-br from-green-600/30 to-green-800/30 border border-green-500/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-white">Storage</h3>
                <p class="text-sm text-gray-400">Disk Space</p>
              </div>
            </div>
            <div class="mt-6">
              <div class="flex justify-between text-sm text-gray-400 mb-2">
                <span>Used: <%= existing.disk %>GB</span>
                <span>Available: <%= max.disk %>GB</span>
              </div>
              <div class="w-full bg-gray-700/70 rounded-full h-2.5">
                <div class="bg-gradient-to-r from-green-500 to-green-400 h-2.5 rounded-full" style="width: <%= (existing.disk / max.disk) * 100 %>%"></div>
              </div>
              <div class="mt-4">
                <a href="../store" class="text-green-400 hover:text-green-300 text-sm font-medium inline-flex items-center group">
                  Upgrade Storage
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Servers Table -->
      <div class="bg-gray-800/80 rounded-xl shadow-xl overflow-hidden border border-gray-700/60 backdrop-blur-sm">
        <div class="px-6 py-4 border-b border-gray-700/50 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
          <h2 class="text-xl font-semibold text-white flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
            </svg>
            Your Servers
          </h2>
          <div class="relative w-full sm:w-auto">
            <input type="text" placeholder="Search servers..." class="bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-2 pl-10 text-sm text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent w-full sm:w-64 transition-all duration-200" id="serverSearch">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 absolute left-3 top-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-700/50">
            <thead class="bg-gray-700/25">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Server Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Resources</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Created</th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700/50">
              <% for (let server of servers) { %>
              <tr class="hover:bg-gray-700/40 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gradient-to-br from-blue-600/20 to-blue-800/20 border border-blue-500/20 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                      </svg>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-white"><%= server.Name || "Unnamed Server" %></div>
                      <div class="text-xs text-gray-400">
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2.5 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-900/30 text-green-400 border border-green-800/50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1.5 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14" />
                    </svg>
                    Online
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-300">
                    <span class="font-medium"><%= server.Cpu || 0 %> CPU</span>, 
                    <span class="font-medium"><%= server.Memory || 0 %>MB RAM</span>, 
                    <span class="font-medium"><%= server.Disk || 0 %>GB Disk</span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= new Date(server.CreatedAt).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <a href="../servers" class="text-blue-400 hover:text-blue-300 px-3 py-1.5 rounded-lg bg-blue-900/20 hover:bg-blue-900/30 border border-blue-800/30 transition-colors inline-flex items-center group">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 group-hover:rotate-6 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                      Manage
                    </a>
                    <a href="../delete?id=<%= server.Id %>" class="text-red-400 hover:text-red-300 px-3 py-1.5 rounded-lg bg-red-900/20 hover:bg-red-900/30 border border-red-800/30 transition-colors inline-flex items-center group">
