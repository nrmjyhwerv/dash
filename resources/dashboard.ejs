<script>
  // Enhanced search functionality with debounce
  let searchTimeout;
  document.getElementById('serverSearch').addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
      const searchTerm = e.target.value.toLowerCase();
      const rows = document.querySelectorAll('tbody tr');
      let visibleCount = 0;

      rows.forEach(row => {
        if (row.querySelector('td')) {
          const serverName = row.querySelector('td:first-child div div:first-child').textContent.toLowerCase();
          if (serverName.includes(searchTerm)) {
            row.style.display = '';
            visibleCount++;
          } else {
            row.style.display = 'none';
          }
        }
      });

      // Update showing count
      const showingElement = document.querySelector('.showing-count');
      if (showingElement) {
        showingElement.textContent = visibleCount;
      }
    }, 300);
  });

  // Add animation to cards on hover
  document.querySelectorAll('.bg-gray-800\\/80').forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-4px)';
    });
    card.addEventListener('mouseleave', function() {
      this.style.transform = '';
    });
  });
</script>

