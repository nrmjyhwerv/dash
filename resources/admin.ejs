  <script>
    // Input validation function
    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(String(email).toLowerCase());
    }

    async function unban() {
      const email = document.getElementById("unban-email").value;
      if (!email) {
        alert("Please enter an email address");
        return;
      }
      if (!validateEmail(email)) {
        alert("Please enter a valid email address");
        return;
      }
      document.location.href = `/unban?email=${encodeURIComponent(email)}`;
    };

    async function ban() {
      const email = document.getElementById("ban-email").value;
      const reason = document.getElementById("ban-reason").value;
      
      if (!email) {
        alert("Please enter an email address");
        return;
      }
      if (!validateEmail(email)) {
        alert("Please enter a valid email address");
        return;
      }
      if (!reason) {
        alert("Please enter a reason for the ban");
        return;
      }
      
      document.location.href = `/ban?email=${encodeURIComponent(email)}&reason=${encodeURIComponent(reason)}`;
    };

    async function addCoins() {
      const email = document.getElementById("ac-email").value;
      const amount = document.getElementById("ac-amount").value;
      
      if (!email) {
        alert("Please enter an email address");
        return;
      }
      if (!validateEmail(email)) {
        alert("Please enter a valid email address");
        return;
      }
      if (!amount || isNaN(amount)) {
        alert("Please enter a valid coin amount");
        return;
      }
      
      document.location.href = `/addcoins?amount=${encodeURIComponent(amount)}&email=${encodeURIComponent(email)}`;
    };

    async function addResources() {
      const email = document.getElementById("ar-email").value;
      const cpu = document.getElementById("ar-cpu").value;
      const ram = document.getElementById("ar-ram").value;
      const disk = document.getElementById("ar-disk").value;
      
      if (!email) {
        alert("Please enter an email address");
        return;
      }
      if (!validateEmail(email)) {
        alert("Please enter a valid email address");
        return;
      }
      if (!cpu && !ram && !disk) {
        alert("Please enter at least one resource value");
        return;
      }
      
      document.location.href = `/addresources?email=${encodeURIComponent(email)}&cpu=${encodeURIComponent(cpu)}&ram=${encodeURIComponent(ram)}&disk=${encodeURIComponent(disk)}`;
    };

    async function addAnnouncement() {
      const title = document.getElementById('ann-title').value;
      const message = document.getElementById('ann-message').value;
      const author = document.getElementById('ann-author').value;

      if (!title) {
        alert('Please enter a title for the announcement');
        return;
      }
      if (!message) {
        alert('Please enter the announcement message');
        return;
      }
      if (!author) {
        alert('Please enter the author name');
        return;
      }

      try {
        const response = await fetch('/add-announcement', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ title, message, author }),
        });
    
        const data = await response.json();
    
        if (response.ok) {
          alert(data.message);
          window.location.href = '/admin?success=ANNOUNCEMENT_ADDED';
        } else {
          alert(`Error: ${data.error}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Something went wrong. Please try again.');
      }
    }

    async function addPromoCode() {
      const code = document.getElementById('promo-code').value;
      const maxUses = document.getElementById('promo-max-uses').value;
      const coins = document.getElementById('promo-coins').value;

      if (!code) {
        alert('Please enter a promo code');
        return;
      }
      if (!maxUses || isNaN(maxUses)) {
        alert('Please enter a valid number for max uses');
        return;
      }
      if (!coins || isNaN(coins)) {
        alert('Please enter a valid coin amount');
        return;
      }

      try {
        const response = await fetch('/add-promocode', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ code, maxUses, coins }),
        });

        const data = await response.json();

        if (response.ok) {
          alert(data.message);
          window.location.reload();
        } else {
          alert(`Error: ${data.error}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Something went wrong. Please try again.');
      }
    }

    // Add input focus effects
    document.querySelectorAll('input, textarea').forEach(input => {
      input.addEventListener('focus', () => {
        input.parentElement.classList.add('ring-2', 'ring-indigo-500/30');
      });
      input.addEventListener('blur', () => {
        input.parentElement.classList.remove('ring-2', 'ring-indigo-500/30');
      });
    });
  </script>
